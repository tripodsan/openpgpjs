{
  "name": "@tripod/openpgp",
  "description": "OpenPGP.js is a Javascript implementation of the OpenPGP protocol. This is defined in RFC 4880.",
  "version": "4.10.1-node8-1",
  "license": "LGPL-3.0+",
  "homepage": "https://openpgpjs.org/",
  "engines": {
    "node": ">= 8.0.0"
  },
  "keywords": [
    "crypto",
    "pgp",
    "gpg",
    "openpgp"
  ],
  "main": "dist/node8/index.js",
  "directories": {
    "lib": "src"
  },
  "files": [
    "src/",
    "dist/node8/"
  ],
  "scripts": {
    "build-node8": "babel src -d dist/node8",
    "build": "grunt build --compat copy:openpgp_compat && grunt build --lightweight copy:openpgp_lightweight clean:js && grunt build",
    "pretest": "grunt",
    "test": "grunt test",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0"
  },
  "dependencies": {
    "@mattiasbuelens/web-streams-polyfill": "^0.3.1",
    "@tripod/asmcrypto.js": "^2.3.2-compat",
    "@tripod/seek-bzip": "1.0.5-openpgp",
    "@tripod/tweetnacl": "1.0.1-openpgp",
    "@tripod/web-stream-tools": "0.0.1-node8-3",
    "asn1.js": "^5.0.0",
    "elliptic": "6.5.2",
    "email-addresses": "3.1.0",
    "node-fetch": "^2.1.2",
    "node-localstorage": "~1.3.0",
    "text-encoding-utf-8": "^1.0.2",
    "whatwg-fetch": "^2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openpgpjs/openpgpjs"
  }
}
